#!/bin/sh

print_usage(){
	echo usage: $0 [--cppflags] [--ldflags]
}

while [[ $# > 0 ]]; do
    case "$1" in
      --cppflags) OUTPUT+="-I@CMAKE_INSTALL_PREFIX@/include "; shift;;
      --ldflags) OUTPUT+="-L@CMAKE_INSTALL_PREFIX@/lib -l@PROJECT_NAME@ " ; 
	    OUTPUT+="-Wl,-rpath=@CMAKE_INSTALL_PREFIX@/lib,--enable-new-dtags "; shift;;
      *) echo "invalid option: $1" 1>&2; print_usage; exit 1;;
    esac
done

echo ${OUTPUT}
